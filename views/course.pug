extends layout

include mixins/_header
include mixins/_footer

block content
    +header()
    section.relative.py-16.bg-gray-100
        .container.mx-auto.px-4
            .relative.flex.flex-col.min-w-0.break-words.bg-white.w-full.mb-6.shadow-xl.rounded-lg.-mt-64
                .px-6
                    .flex.flex-wrap.justify-center
                        .w-full.px-4.flex.justify-center(class='lg:w-3/12 lg:order-2')
                            .relative
                                img.shadow-xl.rounded-full.h-auto.align-middle.border-none.absolute.-m-44.-ml-32(alt='...' src='/images/720x400.png' class='lg:-ml-52' style='max-width: 450px;')
                        .w-full.px-4(class='lg:w-4/12 lg:order-3 lg:text-right lg:self-center')
                            .py-6.px-3.mt-32(class='sm:mt-0')
                                button.bg-blue-500.uppercase.text-white.font-bold.shadow.text-xs.px-4.py-2.rounded.outline-none.mb-1(class='active:bg-pink-600 hover:shadow-md focus:outline-none sm:mr-2' type='button' style='transition: all 0.15s ease 0s;')
                                    | Connect
                        .w-full.px-4(class='lg:w-4/12 lg:order-1')
                            .flex.justify-center.py-4.pt-8(class='lg:pt-4')
                                .mr-4.p-3.text-center
                                    span.text-xl.font-bold.block.uppercase.tracking-wide.text-gray-700 22
                                    span.text-sm.text-gray-500 Upvotes
                                .mr-4.p-3.text-center
                                    span.text-xl.font-bold.block.uppercase.tracking-wide.text-gray-700 10
                                    span.text-sm.text-gray-500 Views
                                .p-3.text-center(class='lg:mr-4')
                                    span.text-xl.font-bold.block.uppercase.tracking-wide.text-gray-700
                                        = course.courseComments.length
                                    span.text-sm.text-gray-500 Reviews
                    .text-center.mt-12
                        h3.text-4xl.font-semibold.leading-normal.mb-2.text-gray-800.mb-2
                            = course.name
                        .text-sm.leading-normal.mt-0.mb-2.text-gray-500.font-bold.uppercase
                            i.fas.fa-map-marker-alt.mr-2.text-lg.text-gray-500
                            = course.tags
                        .mb-2.text-gray-700.mt-10
                            i.fas.fa-briefcase.mr-2.text-lg.text-gray-500
                            | Solution Manager - Creative Tim Officer
                        .mb-2.text-gray-700
                            i.fas.fa-university.mr-2.text-lg.text-gray-500
                            | University of Computer Science
                    .mt-10.py-10.border-t.border-gray-300.text-center
                        .flex.flex-wrap.justify-center
                            .w-full.px-4(class='lg:w-9/12')
                                p.mb-4.text-lg.leading-relaxed.text-gray-800
                                    | An artist of considerable range, Jenna the name taken by
                                    | Melbourne-raised, Brooklyn-based Nick Murphy writes,
                                    | performs and records all of his own music, giving it a
                                    | warm, intimate feel with a solid groove structure. An
                                    | artist of considerable range.
                                a.font-normal.text-blue-500(href='#pablo') Show more
    +footer()