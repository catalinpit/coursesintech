extends layout/base.pug

block content
  .container.mx-auto.px-4.sm-px-8
    .py-12
      h1.text-6xl.font-semibold.leading-tight.text-center.italic courses in tech
    .my-2.flex.flex-col(class='sm:flex-row')
      .flex.flex-row.mb-1(class='sm:mb-0')
        .relative
          select.appearance-none.h-full.rounded-l.border.block.appearance-none.w-full.bg-white.border-gray-400.text-gray-700.py-2.px-4.pr-8.leading-tight(class='focus:outline-none focus:bg-white focus:border-gray-500')
            option 5
            option 10
            option 20
          .pointer-events-none.absolute.inset-y-0.right-0.flex.items-center.px-2.text-gray-700
            svg.fill-current.h-4.w-4(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20')
              path(d='M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z')
        .relative
          select.appearance-none.h-full.rounded-r.border-t.border-r.border-b.block.appearance-none.w-full.bg-white.border-gray-400.text-gray-700.py-2.px-4.pr-8.leading-tight(class='sm:rounded-r-none sm:border-r-0 focus:outline-none focus:border-l focus:border-r focus:bg-white focus:border-gray-500')
            option All
            option Active
            option Inactive
          .pointer-events-none.absolute.inset-y-0.right-0.flex.items-center.px-2.text-gray-700
            svg.fill-current.h-4.w-4(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20')
              path(d='M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z')
      .block.relative
        span.h-full.absolute.inset-y-0.left-0.flex.items-center.pl-2
          svg.h-4.w-4.fill-current.text-gray-500(viewbox='0 0 24 24')
            path(d='M10 4a6 6 0 100 12 6 6 0 000-12zm-8 6a8 8 0 1114.32 4.906l5.387 5.387a1 1 0 01-1.414 1.414l-5.387-5.387A8 8 0 012 10z')
        input.appearance-none.rounded-r.rounded-l.border.border-gray-400.border-b.block.pl-8.pr-6.py-2.w-full.bg-white.text-sm.placeholder-gray-400.text-gray-700(placeholder='Search' class='sm:rounded-l-none focus:bg-white focus:placeholder-gray-600 focus:text-gray-700 focus:outline-none')
    .-mx-4.px-4.py-4.overflow-x-auto(class='sm:-mx-8 sm:px-8')
      .inline-block.min-w-full.shadow.rounded-lg.overflow-hidden
        table.min-w-full.leading-normal
          thead
            tr
              th.px-5.py-3.border-b-2.border-gray-200.bg-gray-100.text-left.text-xs.font-semibold.text-gray-600.uppercase.tracking-wider
                | Course name
              th.px-5.py-3.border-b-2.border-gray-200.bg-gray-100.text-left.text-xs.font-semibold.text-gray-600.uppercase.tracking-wider
                | Author
              th.px-5.py-3.border-b-2.border-gray-200.bg-gray-100.text-left.text-xs.font-semibold.text-gray-600.uppercase.tracking-wider
                | Description
              th.px-5.py-3.border-b-2.border-gray-200.bg-gray-100.text-left.text-xs.font-semibold.text-gray-600.uppercase.tracking-wider
                | Votes
          tbody
            each course of courses
              tr
                td.px-5.py-5.border-b.border-gray-200.bg-white.text-sm
                  .flex.items-center
                    .ml-3
                      p.text-gray-900.whitespace-no-wrap
                        a(href=`courses/${course._id}`) 
                          = course.name
                td.px-5.py-5.border-b.border-gray-200.bg-white.text-sm
                  p.text-gray-900.whitespace-no-wrap 
                    = course.author
                td.px-5.py-5.border-b.border-gray-200.bg-white.text-sm
                  p.text-gray-900.whitespace-no-wrap
                    = course.description
                td.px-5.py-5.border-b.border-gray-200.bg-white.text-sm
                  span.relative.inline-block.px-3.py-1.font-semibold.text-green-900.leading-tight
                    span.absolute.inset-0.bg-green-200.opacity-50.rounded-full(aria-hidden='')
                    span.relative 20
        .px-5.py-5.bg-white.border-t.flex.flex-col.items-center(class='xs:flex-row xs:justify-between')
          span.text-xs.text-gray-900(class='xs:text-sm')
            | Showing 1 to 4 of 50 Entries
          .inline-flex.mt-2(class='xs:mt-0')
            button.text-sm.bg-gray-300.text-gray-800.font-semibold.py-2.px-4.rounded-l(class='hover:bg-gray-400')
              | Prev
            button.text-sm.bg-gray-300.text-gray-800.font-semibold.py-2.px-4.rounded-r(class='hover:bg-gray-400')
              | Next
    